<main role="main">

  <!-- Main Content -->
  <!-- Paragraph Cluster -->
  <article role="article">
    <div class="row">
      <div class="col-sm" align="center">
        <div class="card cardStyles" style="width: 23rem;">
          <div class="card-body">
            <h5 class="card-title">Sign Up</h5>
            <h6 class="card-subtitle mb-2 text-muted">Please enter the following to Sign-up and use our exclusive services.</h6>
            <hr class="spacer">
            </hr>
            <div class="row">
              <div class="col-sm" align="left">
                <form action"/signup" method="POST">
                  <div class="form-group">
                    <label for="email" class="signinlabel">Email address *</label>
                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter E-mail" name="emailSignup">
                  </div>
                  <div class="form-group">
                    <label for="email" class="signinlabel">Confirm E-mail address *</label>
                    <input type="email" class="form-control" id="confEmail" aria-describedby="emailHelp" placeholder="Confirm E-mail" name="confEmailSignup">
                  </div>
                  <div class="form-group">
                    <label for="password" class="signinlabel">Password *</label>
                    <input type="password" class="form-control" id="password" placeholder="Enter Password" name="passwordSignup">
                  </div>
                  <div class="form-group">
                    <label for="password" class="signinlabel">Confirm Password *</label>
                    <input type="password" class="form-control" id="confPassword" placeholder="Confirm Password" name="confPasswordSignup">
                  </div>
                  <small id="emailHelp" class="form-text text-muted">* Required.</small></small>
                  <div class="form-group">
                    <div class="row">
                      <div class="col btnSigninStyles" align="center">
                        <button id="registerbutton" class="btn btn-primary jumbotronButton shadow btn-sm my-2 my-sm-0" type="submit" name="submit">Register</button>
                      </div>
                    </div>
                  </div>
                  {{# if errors}}
                  <div class="form-group">
                    <div class="errors alert alert-danger" role="alert">
                      <ul>
                        {{# each errors }}
                          <li>{{ this.msg }}</li>
                        {{/each}}
                      </ul>
                    </div>
                  </div>
                  {{/if}}
                  {{# if success}}
                  <div class="form-group">
                    <div class="success alert alert-success" role="alert">You are now registered.</div>
                  </div>
                  {{/if}}
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>
</main>

