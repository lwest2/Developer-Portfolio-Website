<!doctype html>
<html class="no-js" lang="">

  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{{ Title }}</title>
    <meta name="description" content="Developer Liam West's portfolio site.">
    <meta name="author" content="Liam West">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="manifest" href="site.webmanifest">
    <link rel="apple-touch-icon" href="icon.png">

    <!-- Styles -->
    <link rel="stylesheet" href="stylesheets/normalize.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/Responsive.css">
    <link href="https://unpkg.com/gijgo@1.9.11/css/gijgo.min.css" rel="stylesheet" type="text/css" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
  </head>

  <body>



      {{#if logOut}}
            {{#if admin}}
            <!-- Admin Connection -->
              <div class="container">
                <div class="row">
                  <div class="col">
                    <div class="chatnowButton">
                      <a class="btn btn-primary btn jumbotronButton shadow" role="button" data-toggle="collapse" href="#collapseChat" aria-expanded="false" aria-controls="collapseChat">Live Chat Now</a>
                    </div>
                  </div>
                </div>
              </div>

              <div class="collapse chat" id="collapseChat">
                <div class="card bg-light mb-3" style="width: 36rem;">
                  <div class="card-header">
                  <h5 class="card-title">Chat</h5>
                  </div>
                  <div class="card-body">
                    <form>
                      <div class="row">
                        <div class="col-sm-4">
                          <div class="form-group">
                            <label for="Select">Select Chat</label>
                            <select class="form-control" id="Select" name="selectUser">
                              {{#each users}}
                              <option>{{this}}</option>
                              {{/each}}
                            </select>
                          </div>
                        </div>
                        <div class="col-sm-8">
                          <div id="outputMessages">
                            <div class="card bg-light mb-3"  style="height: 20rem;">

                            </div>
                          </div>
                          <hr></hr>

                          <div class=" inputMessage">
                            <div class="form-group input-group">
                              <textarea class="form-control sendMessageText" id="messageChat" rows="3" maxlength="200" name="messageChat"></textarea>
                              <button class="btn btn-primary btn jumbotronButton shadow input-group-addon sendMessageButton" role="button" type="button" name="sendMessage" id="sendmsgBtn">Send</button>
                            </div>
                          </div>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            {{else}}
            <!-- Client Connection -->
              <div class="container">
                <div class="row">
                  <div class="col">
                    <div class="chatnowButton">
                      <a class="btn btn-primary btn jumbotronButton shadow" role="button" data-toggle="collapse" href="#collapseChat" aria-expanded="false" aria-controls="collapseChat">Live Chat Now</a>
                    </div>
                  </div>
                </div>
              </div>

              <div class="collapse chat" id="collapseChat">
                <div class="card bg-light mb-3" style="width: 18rem;">
                  <div class="card-header">
                  <h5 class="card-title">Chat</h5>
                  </div>
                  <div class="card-body">
                    <div id="outputMessages" style="height: 20rem;">

                    </div>
                    <hr></hr>
                    <form>
                    <div class="row">
                      <div class="col-sm inputMessage">
                        <div class="form-group input-group">
                          <textarea class="form-control sendMessageText" id="messageChat" rows="3" maxlength="200" name="messageChat"></textarea>
                          <button class="btn btn-primary btn jumbotronButton shadow input-group-addon sendMessageButton" role="button" type="button" name="sendMessage" id="sendmsgBtn">Send</button>
                        </div>
                      </div>
                    </div>
                    </form>
                  </div>
                </div>
              </div>
            {{/if}}
      {{/if}}

      {{{ body }}}
